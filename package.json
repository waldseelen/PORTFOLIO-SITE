{
    "name": "portfolio-site",
    "version": "2.0.0",
    "description": "Modern Django Portfolio with HTMX and Alpine.js",
    "main": "index.js",
    "directories": {
        "test": "tests"
    },
    "scripts": {
        "dev": "vite",
        "build": "npm run build:css",
        "build:css": "tailwindcss -i ./project/static/css/input.css -o ./project/static/css/output.css --minify",
        "watch:css": "tailwindcss -i ./project/static/css/input.css -o ./project/static/css/output.css --watch",
        "lint": "eslint . --ext js --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview --host 0.0.0.0 --port 8080",
        "start": "vite preview --host 0.0.0.0 --port 8080",
        "test": "playwright test",
        "test:ui": "playwright test --ui",
        "test:headed": "playwright test --headed",
        "lighthouse": "lhci autorun",
        "test:a11y": "axe http://localhost:8000 --rules wcag2a,wcag2aa"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/waldseelen/PORTFOLIO-SITE.git"
    },
    "keywords": [
        "django",
        "htmx",
        "alpine",
        "portfolio",
        "tailwind"
    ],
    "author": "Bugra",
    "license": "MIT",
    "type": "commonjs",
    "bugs": {
        "url": "https://github.com/waldseelen/PORTFOLIO-SITE/issues"
    },
    "homepage": "https://github.com/waldseelen/PORTFOLIO-SITE#readme",
    "devDependencies": {
        "@axe-core/cli": "^4.10.2",
        "@axe-core/playwright": "^4.10.2",
        "@lhci/cli": "^0.15.1",
        "@playwright/test": "^1.56.1",
        "@tailwindcss/cli": "^4.1.12",
        "@tailwindcss/postcss": "^4.1.13",
        "autoprefixer": "^10.4.21",
        "axe-core": "^4.10.3",
        "cross-env": "^10.0.0",
        "cssnano": "^7.1.1",
        "lighthouse": "^13.0.1",
        "postcss": "^8.5.6",
        "rimraf": "^6.1.2",
        "sharp": "^0.34.4",
        "stylelint": "^16.25.0",
        "stylelint-config-standard": "^39.0.1",
        "tailwindcss": "^4.1.13",
        "terser": "^5.44.0",
        "vite": "^7.2.4"
    },
    "dependencies": {
        "algoliasearch": "^5.46.3",
        "dotenv-safe": "^9.1.0",
        "react-hook-form": "^7.71.1",
        "react-instantsearch": "^7.22.1",
        "socket.io-client": "^4.8.3",
        "swr": "^2.3.8",
        "zod": "^3.25.76",
        "zustand": "^5.0.10"
    }
}
