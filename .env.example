# =============================================================================
# Environment Configuration Template - Next.js Portfolio
# =============================================================================
# Copy this file to .env.local in nextjs-app/ directory

# =============================================================================
# NEXT.JS CORE SETTINGS
# =============================================================================

# Site URL (production)
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Environment
NODE_ENV=development

# =============================================================================
# SANITY CMS CONFIGURATION
# =============================================================================

# Sanity Project ID (from sanity.io dashboard)
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id

# Sanity Dataset
NEXT_PUBLIC_SANITY_DATASET=production

# Sanity API Token (for server-side mutations)
SANITY_API_TOKEN=your_sanity_api_token

# Sanity Webhook Secret (for revalidation)
SANITY_WEBHOOK_SECRET=your_webhook_secret

# =============================================================================
# AUTHENTICATION (NextAuth.js)
# =============================================================================

# NextAuth Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-generate-with-openssl

# NextAuth URL
NEXTAUTH_URL=http://localhost:3000

# OAuth Providers (optional)
GITHUB_ID=
GITHUB_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# =============================================================================
# EMAIL CONFIGURATION (Resend)
# =============================================================================

# Resend API Key
RESEND_API_KEY=your_resend_api_key

# Email addresses
CONTACT_EMAIL=contact@your-domain.com

# =============================================================================
# SEARCH (Algolia - Optional)
# =============================================================================

# Algolia credentials
NEXT_PUBLIC_ALGOLIA_APP_ID=
NEXT_PUBLIC_ALGOLIA_SEARCH_API_KEY=
ALGOLIA_ADMIN_API_KEY=

# =============================================================================
# ANALYTICS
# =============================================================================

# Google Analytics
NEXT_PUBLIC_GA_ID=

# Vercel Analytics (automatically enabled on Vercel)
# No configuration needed

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API URL (for external APIs if needed)
NEXT_PUBLIC_API_URL=

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================

# Sentry DSN (optional)
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_BLOG=true
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# =============================================================================
# PERFORMANCE
# =============================================================================

# Image optimization
NEXT_PUBLIC_IMAGE_QUALITY=80

# Cache settings (in seconds)
REVALIDATE_INTERVAL=3600
