{
    "$schema": "https://opentelemetry.io/otelcol/receiver/hostmetrics",
    "ci": {
        "collect": {
            "url": "http://localhost:3000",
            "numberOfRuns": 3,
            "settings": {
                "preset": "desktop"
            }
        },
        "assert": {
            "assertions": {
                "categories:performance": [
                    "error",
                    {
                        "minScore": 0.8
                    }
                ],
                "categories:accessibility": [
                    "error",
                    {
                        "minScore": 0.9
                    }
                ],
                "categories:best-practices": [
                    "error",
                    {
                        "minScore": 0.8
                    }
                ],
                "categories:seo": [
                    "error",
                    {
                        "minScore": 0.9
                    }
                ]
            }
        },
        "upload": {
            "target": "temporary-public-storage"
        }
    }
}
