{
    "$schema": "https://opentelemetry.io/otelcol/receiver/hostmetrics",
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ],
    "env": {
        "NEXT_PUBLIC_SITE_URL": "@site_url",
        "NEXT_PUBLIC_GA_ID": "@ga_id",
        "NEXT_PUBLIC_SANITY_PROJECT_ID": "@sanity_project_id",
        "NEXT_PUBLIC_SANITY_DATASET": "@sanity_dataset",
        "SANITY_API_TOKEN": "@sanity_api_token",
        "NEXT_PUBLIC_API_URL": "@api_url"
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                }
            ]
        },
        {
            "source": "/sw.js",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, must-revalidate"
                },
                {
                    "key": "Service-Worker-Allowed",
                    "value": "/"
                }
            ]
        },
        {
            "source": "/_next/static/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/api/django/:path*",
            "destination": "https://api.bugragormus.com/:path*"
        }
    ]
}
